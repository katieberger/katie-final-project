{% extends '_templates/base.njk' %}

{% block page_title %}Tour Dates{% endblock %}

{% block page_description %}Table of 2021 tour dates.{% endblock %}

<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.22/css/jquery.dataTables.css">
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.js"></script>

{% block content %}
<article class="container">
  <h1>2021 Tour Dates</h1>
  <table id="tour" class="table table-hover">
    <thead class="thead-light">
      <tr>
        <th scope="col">Date</th>
        <th scope="col">City</th>
        <th scope="col">Venue</th>
      </tr>
    </thead>
    <tbody>
      {% for tour in members.tour2021 %}
      <tr>
        <td>{{ tour.date }}</td>
        <td>{{ tour.city }}</td>
        <td>{{ tour.venue }}</td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
  <script>
      $(document).ready( function () {
      $('#tour').DataTable();
      } );
  </script>
</article>
{% endblock %}